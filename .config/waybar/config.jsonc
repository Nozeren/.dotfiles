    // "width": 1280, // Waybar width
    "spacing": 4, // Gaps between modules (4px)
    "reload_style_on_chage": true,
    // Choose the order of the modules
    "modules-left": [
        "hyprland/workspaces",
    ],
    "modules-center": [
        "clock",
    ],
    "modules-right": [
        "group/tools",
        "battery",
        "battery#bat2",
        "network",
        "tray",
        "custom/notification",
        "custom/power",
    ],
    "group/tools":{
        "orientation":"horizontal",
        "drawer": {
            "transition-duration": 500,
            "transition-left-to-right": false,
        },
        "modules":[
            "custom/expand",
            "pulseaudio",
            "pulseaudio#mic",
            "backlight",
        ]
    },
